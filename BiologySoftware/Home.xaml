			<Setter Property="FontFamily" Value="Miriam Fixed"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontSize" Value="21.333"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>
