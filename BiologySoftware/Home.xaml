	</Window.Resources>
	<Window.Background>
		<RadialGradientBrush>
			<GradientStop Color="#FF010131" Offset="0"/>
			<GradientStop Color="Black" Offset="0.996"/>
		</RadialGradientBrush>
	</Window.Background>

	<Grid x:Name="LayoutRoot">
		<TextBlock Height="64" Margin="273,31,273,0" TextWrapping="Wrap" Text="Main Menu" VerticalAlignment="Top" Foreground="White" FontFamily="Miriam Fixed" FontSize="32" FontWeight="Bold" TextAlignment="Center" RenderTransformOrigin="0.082,0.531"/>
		<TextBlock HorizontalAlignment="Left" Height="31.5" Margin="29.5,139.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250.5" Foreground="White" FontSize="26.667" FontFamily="Miriam Fixed" FontWeight="Bold" Text="Unit 1"/>
		<Button x:Name="ch1" Content="Chapter 1(The Science of Biology) " Height="42" Margin="52,188.5,290,0" Style="{DynamicResource ButtonStyle4}" VerticalAlignment="Top" FontSize="21.333" Cursor="Hand" Click="ch1_Click"/>
