	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="0.974*"/>
			<RowDefinition Height="0.026*"/>
		</Grid.RowDefinitions>
		<Grid.Background>
			<RadialGradientBrush>
				<GradientStop Color="#FF010131" Offset="0"/>
				<GradientStop Color="Black" Offset="1"/>
			</RadialGradientBrush>
		</Grid.Background>
		<TextBox x:Name="txtsearch" Height="36" Margin="191,112,139,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#0EFFFFFF" BorderBrush="White" CaretBrush="White" OpacityMask="White" Foreground="White" SpellCheck.IsEnabled="True"/>
		<TextBox x:Name="txtdefinition" Margin="191,213,139,17" TextWrapping="Wrap" Background="#08FFFFFF" Foreground="White" SpellCheck.IsEnabled="True" FontSize="16" FontFamily="Segoe UI"/>
